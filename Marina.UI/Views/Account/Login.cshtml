@model Marina.UI.Models.ViewModels.LoginVm;

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", @novalidate = "novalidate" }))
{
    <div style="display:flex; width:100%; min-height:600px;; justify-content:center; align-items:center;">
        <div style="width:100%; max-width:600px; box-shadow:10px 10px 80px rgba(0,0,0,0.1); border-radius:18px; padding:24px;  display: flex; flex-direction: column;">

            @*<form  id="login-form" class="needs-validation" novalidate>*@
            <form id="login-form" class="was-validated">

                <span style="font-weight:700; font-size: 20px; margin-bottom: 20px;">Login</span>

                <div class="form-outline mb-4">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                 @*   <div class="invalid-feedback">
                        Please enter a valid username.
                    </div>*@
                </div>

                <div class="form-outline mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between mb-4">
                    <div class="d-flex">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <label class="form-check-label" for="form2Example31"> Remember me </label>
                            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <!-- Simple link -->
                        <a href="#!">Forgot password?</a>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary btn-block mb-4">Login</button>

            </form>
        </div>
    </div>
}



